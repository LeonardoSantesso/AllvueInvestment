@model Investment.Core.DTOs.SaleRecordDetailsDto

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title mt-0" id="myModalLabel">Sale Record Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="container">
            <div class="card shadow-sm p-3 mb-4 bg-white">
                <h6 class="font-weight-bold mb-3">SALE SUMMARY</h6>
                <div class="d-flex justify-content-between mb-2">
                    <span>Sale Date:</span>
                    <span>@Model.SaleDate.ToString("MM/dd/yyyy")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Total Shares Sold:</span>
                    <span>@Model.TotalSold</span>
                </div>
                <hr />
                <div class="d-flex justify-content-between mb-2">
                    <span>Cost Basis per Sold Share:</span>
                    <span>@Model.CostBasisPerSoldShare.ToString("C2")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Total Cost (Total Purchase Price):</span>
                    <span>@Model.TotalCost.ToString("C2")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Total Sale Value (Total Selling Price):</span>
                    <span>@Model.TotalSaleValue.ToString("C2")</span>
                </div>
                <hr />
                <div class="d-flex justify-content-between font-weight-bold" style="color: @(Model.TotalProfit < 0 ? "red" : "green")">
                    <span>Total Profit:</span>
                    <span>@(Model.TotalProfit < 0 ? "-" : "+") @Math.Abs(Model.TotalProfit).ToString("C2")</span>
                </div>
            </div>

            <h6 class="font-weight-bold mb-3 text-uppercase">Stock Lots Details</h6>
            <div class="table-responsive">
                <table class="table table-striped table-hover text-center">
                    <thead class="thead-light">
                        <tr>
                            <th class="text-center">Shares Sold</th>
                            <th class="text-center">Cost Basis ($)</th>
                            <th class="text-center">Price Per Share ($)</th>
                            <th class="text-center">Purchase Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SaleRecordDetailItems)
                        {
                            <tr>
                                <td class="text-center">@item.SharesSold</td>
                                <td class="text-center">@item.CostBasis.ToString("C2")</td>
                                <td class="text-center">@item.PricePerShare.ToString("C2")</td>
                                <td class="text-center">@item.PurchaseDate.ToString("MM/dd/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">
            Close
        </button>
    </div>
</div>
